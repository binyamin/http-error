{
	"compilerOptions": {
		"types": [],
		"lib": ["ES2022"],
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"allowJs": true,
		// Best Practices
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true
	}
}
